require 'rubygems'
require 'hoe'

Hoe.new('oembed_links', "0.2") do |p|
  p.summary = ""
  p.url = 'http://indystar.com/'
  p.description = "Easy OEmbed integration for Ruby (and Rails 3)."
  p.rubyforge_name = 'oembed_links'
  p.extra_dev_deps = ['json']
  p.developer('Indianapolis Star MD&D', 'bugs@indy.com')
end
 
